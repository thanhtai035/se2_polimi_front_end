<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="10dp"
    android:paddingBottom="20dp"
    android:layout_marginTop="30dp"
    android:background="@drawable/white_bg_border"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/pic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="John Doe"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/pic"
        app:layout_constraintTop_toTopOf="@+id/pic" />



    <TextView
        android:id="@+id/uniTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="company"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/nameTxt"
        app:layout_constraintStart_toStartOf="@+id/nameTxt" />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="@+id/pic"
        app:layout_constraintTop_toBottomOf="@+id/uniTxt"
        app:srcCompat="@drawable/baseline_location_on_24"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/locationTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Location"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/uniTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skills:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/locationTxt"
        android:id="@+id/skillsTxt"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/skillRecycleView"
        app:layout_constraintTop_toBottomOf="@id/skillsTxt"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:id="@+id/agreeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="Accepted"
        android:textStyle="bold"
        android:background="@drawable/grey_bg"
        android:padding="10dp"
        android:textColor="#008000"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/rejectedTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="Rejected"
        android:textStyle="bold"
        android:background="@drawable/red_button_bg"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/createdTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date and Time"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/agreeTxt"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/viewCVBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View CV"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/createdTxt"
        android:layout_marginEnd="30dp"
        android:background="@drawable/orange_button_bg"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/decisionView"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/skillRecycleView"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Add Interview"
            android:textColor="@color/white"
            android:background="@drawable/edittext_bg"
            android:textSize="10sp"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            android:id="@+id/addInterviewBtn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Interview added"
            android:textColor="@color/black"
            android:background="@drawable/grey_bg"
            android:textSize="10sp"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:id="@+id/addInterviewTxt"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="10sp"
            android:text="Add Questionnaire"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/edittext_bg"
            android:id="@+id/addQuestionnaireBtn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="10sp"
            android:text="Questionnaire Added"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:visibility="gone"
            android:background="@drawable/grey_bg"
            android:id="@+id/addQuestionnaireTxt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="10sp"
            android:text="Answer"
            android:layout_marginStart="15dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/green_button_bg"
            android:id="@+id/answerBtn"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>