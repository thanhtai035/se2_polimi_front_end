<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="10dp"
    android:paddingBottom="20dp"
    android:layout_marginTop="30dp"
    android:background="@drawable/white_bg_border"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/stundetPic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/uniStudentNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="John Doe"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/stundetPic"
        app:layout_constraintTop_toTopOf="@+id/stundetPic" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="@+id/uniLocationTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_location_on_24"
        android:layout_marginStart="20dp"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/uniLocationTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Location"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/uniStudentNameTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skills:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/uniLocationTxt"
        android:id="@+id/uniSkillsTxt"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uniSkillRecycleView"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/uniSkillsTxt"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/uniInprogressStudent"
        android:text="In Progress"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:id="@+id/viewCVUniBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View CV"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/uniInprogressStudent"
        android:layout_marginEnd="40dp"
        android:background="@drawable/orange_button_bg"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>